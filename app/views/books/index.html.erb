<h1>Books</h1>
<div class="flash">
	<%= flash[:notice] %>
</div>

<%= flash.now[:error] = 'error' %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>

 <tbody>
 	<% @books.each do |book| %>
 	<tr>
 	  <td><%= book.title %></td>
 	  <td><%= book.body %></td>
 	  <td>
 	  	<%= link_to "show", book_path(book) %>
 	  	<%= link_to "edit", edit_book_path(book) %>
 	  	<%= link_to "destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
 	  </td>
 	 </tr>
 	<% end %>
 	</tbody>
 </table>

 <h2>New book</h2>
  <!--form_for部分-->
 <%= form_for(@book) do |f| %>
 	<% if @book.errors.any? %>
 	  <div id="error_explanation">
 	    <h2><%= pluralize(@book.errors.count, "book") %>
 	    prohibied this erro from being saved: </h2>

 	    <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
       </div>
     <% end %>

     <div class="field">
     	<%= f.label :title %>
     	<%= f.text_field :title %>
     </div>

     <div class="field">
     	<%= f.label :body %>
     	<%= f.text_area :body %>
     </div>

    <div class="action">
    	<%= f.submit 'Create Book' %></br>
    </div>
 <% end %>





















<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "book") %>
      prohibied this erro from being saved: </h2>

      <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
       </div>
     <% end %>
  <div class="field">
 	  <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field" >
    <%= f.label :body %>
    <%= f.text_area :body %><br>
  </div>

  <div class="action" >
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<%= link_to 'Show', book_path(@book.id)%> | 
<%= link_to 'Back', books_path %>
